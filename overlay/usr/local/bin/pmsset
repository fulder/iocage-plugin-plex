#!/bin/sh

set_auto_update() {
    if [ "$auto_update" = "true" ]
    then
        sysrc -f /etc/rc.conf plex_auto_update="YES"
    elif [ "$auto_update" = "false" ]
    then
        sysrc -f /etc/rc.conf -x plex_auto_update
    else
        echo "Invalid plex auto_update value. Accepted values: true/false"
        exit 1
    fi
}

set_cron() {
    echo "$cron_expression" /usr/local/bin/update_pms > new_cron

    if crontab new_cron
    then
      sysrc -f /etc/rc.conf plex_cron="$cron_expression"
      rm new_cron
    else
      echo "Invalid cron expression"
      exit 1
    fi
}

if [ "$1" = "auto_update" ]
then
    auto_update="$2"
    set_auto_update
elif [ "$1" = "cron" ]
then
    cron_expression="$2"
    set_cron
else
    echo "Unknown option"
fi