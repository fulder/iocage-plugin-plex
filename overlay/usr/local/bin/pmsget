#!/bin/sh

get_auto_update() {
    if sysrc -c -q plex_auto_update
    then
        echo "plex_auto_update=true"
    else
        echo "plex_auto_update=false"
    fi
}

if [ "$1" = "autoupdate" ]
then
    get_auto_update
elif [ "$1" = "cron" ]
then
    sysrc plex_cron
else
    echo "Unknown option"
fi